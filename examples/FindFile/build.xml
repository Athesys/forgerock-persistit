<project name="FindFile" default="run" basedir=".">
    <description>
        Build FindFile.java
    </description>

  <target name="compile" description="compile the source " >
    <javac debug="true"
           source="1.5" 
           target="1.5"
           srcdir="."
    	   destdir=".">
           <classpath>
              <fileset dir="../..">
                  <or>
                    <!-- Release location -->
                    <filename name="akiban-persistit-*.jar" />
                    <!-- Source location -->
                    <filename name="target/akiban-persistit-*.jar" />
                  </or>
              </fileset>
              <pathelement location="." />
           </classpath>
    </javac>  
</target>
    <target name="run" depends="compile">
    <java  fork="true" classname="FindFile">
           <classpath>
              <fileset dir="../..">
                  <or>
                    <!-- Release location -->
                    <filename name="akiban-persistit-*.jar" />
                    <!-- Source location -->
                    <filename name="target/akiban-persistit-*.jar" />
                  </or>
              </fileset>
              <pathelement location="." />
           </classpath>
     </java>
  </target>

  <target name="clean">
    <delete>
      <fileset dir=".">
       <include name="*.class" />
       <include name="ffdemo*" />
      </fileset>
    </delete>
  </target>
  
</project>

