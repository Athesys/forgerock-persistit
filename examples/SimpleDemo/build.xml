<project name="SimpleDemo" default="run" basedir=".">
    <description>
        Build SimpleDemo.java
    </description>

  <target name="compile" description="compile the source " >
    <javac debug="true"
    	   srcdir="."
    	   destdir=".">
           <classpath>
              <fileset dir="../../target">
                 <include name="akiban-persistit*.jar"/>
              </fileset>
           </classpath>
    </javac>
  </target>

  <target name="run" depends="compile">
    <java  classname="SimpleDemo" fork="true">
        <classpath>
          <fileset dir="../../target">
                <include name="akiban-persistit*.jar"/>
             </fileset>
           <pathelement location="." />
        </classpath>
    </java>
  </target>
  
  <target name="clean">
    <delete>
      <fileset dir=".">
       <include name="*.class" />
       <include name="sdemo*" />
      </fileset>
    </delete>
  </target>
  
</project>

