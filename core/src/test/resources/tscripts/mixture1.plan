logpath $logpath$/result_$timestamp$.log

#Stress test mixture, no transactions, multithreaded, 1000 buffers

delete $datapath$/persistit $datapath$/persistit_journal.*

clearprops
prop buffer.count.8192=1000
prop volume.1=$datapath$/persistit,create,bufferSize:8192,initialSize:10M,extensionSize:10M,maximumSize:4G
prop journalpath=$datapath$/persistit_journal
prop logfile=$logpath$/persistit_$timestamp$.log
prop rmiport=8081

init
multithread

test com.persistit.stress.Stress1 repeat=1 count=1000000
test com.persistit.stress.Stress1 repeat=10 count=100000
test com.persistit.stress.Stress2 repeat=1 count=100000 seed=3
test com.persistit.stress.Stress2 repeat=1 count=100000 seed=4
test com.persistit.stress.Stress3 repeat=5 count=100000 seed=5
test com.persistit.stress.Stress3 repeat=5 count=100000 seed=6
test com.persistit.stress.Stress5 repeat=5 count=1000000
test com.persistit.stress.Stress5 repeat=5 count=1000000
test com.persistit.stress.Stress6 repeat=1 count=25000 size=250
test com.persistit.stress.Stress6 repeat=3 count=50000 size=250
test com.persistit.stress.Stress7 repeat=1 count=60000 size=250 seed=11
test com.persistit.stress.Stress7 repeat=10 count=6000 size=250 seed=12

icheck persistit

waitIfFailed Please examine the failure!


close

